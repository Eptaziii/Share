{% extends 'base.html.twig' %}
{% block title %}
	{{parent()}}
	Inscription
{% endblock %}
{% block stylesheets %}
	{{parent()}}
	{{ encore_entry_link_tags('verif-mdp') }}
{% endblock %}
{% block body %}
	<div class="container-fluid">
		<h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold">Inscription</h1>
	<div class="row justify-content-center">
		<div class="col-12 col-md-6 p-4 m-0 text-primary">
			{{ form_errors(registrationForm) }}
			{{ form_start(registrationForm) }}
			{{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.prenom, {label: "Prénom"}) }}
            {{ form_row(registrationForm.nom) }}
			{{ form_label(registrationForm.plainPassword)}}
			<div id="passwordVerif">
				<div id="longueur" class="text-danger">
					● 12 caractères
				</div>
				<div id="minuscule" class="text-danger">
					● Minuscule
				</div>
				<div id="majuscule" class="text-danger">
					● Majuscule
				</div>
				<div id="chiffre" class="text-danger">
					● Chiffre
				</div>
				<div id="caractere" class="text-danger">
					● Caractère spécial
				</div>
				<div class="progress bg-danger">
					<div 
						id="pb" 
						class="progress-bar progress-bar-striped progress-bar-animated bg-success" 
						role="progressbar" 
						aria-valuenow="0" 
						aria-valuemin="0" 
						aria-valuemax="100" 
						style="width: 0%;">
					</div>
				</div>
			</div>
			{{ form_widget(registrationForm.plainPassword, {id: "form_plainPassword"}) }}
			{{ form_row(registrationForm.verifPassword, {label: 'Confirmer le mot de passe'}) }}
			<div class="text-center">
				<canvas id="captcha" width="300" height="100"></canvas>
			</div>
			{{ form_widget(registrationForm.captcha, {id: "form_captcha"}) }}
			{{ form_row(registrationForm.agreeTerms, {label: "J'accepte les termes"}) }}
			<div class="text-center">
				<button class="btn btn-lg btn-primary mt-2 disabled" type="submit" id="btInscrire">
					S'inscrire</button>
			</div>
			{{ form_end(registrationForm) }}
		</div>
	</div>
</div>
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('verif-mdp') }}
	{{ encore_entry_script_tags('captcha') }}
{% endblock %}