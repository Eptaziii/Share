{% extends 'base.html.twig' %}
{% block title %}
	{{parent()}}
	Inscription
{% endblock %}
{% block body %}
	<div class="container-fluid">
		<h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold">Inscription</h1>
	<div class="row justify-content-center">
		<div class="col-12 col-md-6 p-4 m-0 text-primary">
			{{ form_errors(registrationForm) }}
			{{ form_start(registrationForm) }}
			{{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.prenom, {label: "Pr√©nom"}) }}
            {{ form_row(registrationForm.nom) }}
			{{ form_row(registrationForm.plainPassword, {label: 'Mot de passe'}) }}
			<div class="text-center taille" id="captcha">
				
			</div>
			{{ form_widget(registrationForm.captcha, {id: "form_captcha"}) }}
			{{ form_row(registrationForm.agreeTerms, {label: "J'accepte les termes"}) }}
			<div class="text-center">
				<button class="btn btn-lg btn-primary mt-2 disabled" type="submit" id="btInscrire">
					S'inscrire</button>
			</div>
			{{ form_end(registrationForm) }}
		</div>
	</div>
</div>
{% block javascript %}
	{{ encore_entry_script_tags('captcha') }}
{% endblock %}
{% endblock %}