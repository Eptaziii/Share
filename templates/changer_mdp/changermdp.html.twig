{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}Modifier votre mot de passe 
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold">Modif MDP
		</h1>
		<div class="row justify-content-center">
			<div class="col-12 col-md-6 p-4 m-0 text-primary">
				{{ form_start(modifmdp) }}
                    {{ form_row(modifmdp.password)}}
                    {{ form_row(modifmdp.newpassword)}}
                    {{ form_row(modifmdp.confirmnewpassword)}}
				{{ form_end(modifmdp) }}
			</div>
		</div>
	</div>
{% endblock %}
