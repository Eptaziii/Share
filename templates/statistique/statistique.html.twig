{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Statistique du site{% endblock %}

{% block body %}
    <div class="container-fluid">
	    <h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold">Statistique de SHARE</h1>
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 p-4 m-0 text-primary">
                <div class="card border-secondary mb-3 text-center" style="max-width: 20rem;">
                    <div class="card-header">Nombre d'utilisateur inscrit</div>
                    <div class="card-body">
                        <p class="card-text ">{{ nbUser }} inscrit(e)(s)</p>
                    </div>
                </div>
                 <div class="card border-secondary mb-3 text-center" style="max-width: 20rem;">
                    <div class="card-header">Nombre de fichier uploads</div>
                    <div class="card-body">
                        <p class="card-text ">{{ nbFichier }} uploadé(s) </p>
                    </div>
                </div>
                <div class="card border-secondary mb-3 text-center" style="max-width: 20rem;">
                    <div class="card-header">Nombre de fichier téléchargé(s)</div>
                    <div class="card-body">
                        <p class="card-text ">{{ nbTelechargement }} téléchargé(s) </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
