{% extends 'base.html.twig' %}
{% block title %}
	{{parent()}}Partage fichier
{% endblock %}
{% block body %}
	<div class="container-fluid">
		<div class="row justify-content-center">
			<div class="col-10 text-primary">
				<h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold">Partage du fichier : {{fichier.nomOriginal}}</h1>
				{{ form_start(form) }}
				<div class="table-responsive">
					<table class="table">
						{% for user in users %}
							<tr>
								<td class="text-primary">
									-
									{{user.nom}}
									{{user.prenom}}
                                    {{user.email}}</td>
								<td class="text-primary">
								{{ form_widget(form.users[user.id]) }}</td>
							</tr>
						{% endfor %}
					</table>
				</div>
				{{ form_row(form.ajouter) }}
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}